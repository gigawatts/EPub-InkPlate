    <regular     filename="CrimsonPro-Regular.otf"/>
    <bold        filename="CrimsonPro-Bold.otf"/>
    <italic      filename="CrimsonPro-Italic.otf"/>
    <bold-italic filename="CrimsonPro-BoldItalic.otf"/>
  </font>

<?xml version="1.0" encoding="utf-8"?>
<!-- 
  To be effective, this file must be named fonts_list.xml

  This file must be present in the top SDCard folder. It is loaded at boot time
  or after deep sleep to initialize the structure of the fonts. Two groups of fonts
  are defined: SYSTEM fonts that are used to display application controls, and
  USER's fonts that can be selected by the user to display books content.
  Only the first 8 user fonts will be read. 
  
  Each font in the USER's group must define normal, bold, italic, and bold-italic 
  filenames. Too large font files may cause bad application behavior: the 4 files 
  combined are limited to 300 Kbytes by the application.
  
  The SYSTEM group is taylored to the needs of the EPub-Inkplate software. Changes 
  may impact the way that the application behave.

  All font files must reside in the "fonts" folder on the SDCard. 

-->
<fonts>
  <group name="SYSTEM">
    <font name="TEXT">
      <normal      filename="CrimsonPro-Regular.otf"/>
      <italic      filename="CrimsonPro-Italic.otf"/>
    </font>
    <font name="ICON">
      <normal      filename="drawings.otf"/>
    </font>
  </group>
  <group name="USER">
    <font name="CRIMSON S">
      <normal      filename="CrimsonPro-Regular.otf"/>
      <bold        filename="CrimsonPro-Bold.otf"/>
      <italic      filename="CrimsonPro-Italic.otf"/>
      <bold-italic filename="CrimsonPro-BoldItalic.otf"/>
    </font>
    <font name="DEJAVU S">
      <normal      filename="DejaVuSerif-Regular.otf"/>
      <bold        filename="DejaVuSerif-Bold.otf"/>
      <italic      filename="DejaVuSerif-Italic.otf"/>
      <bold-italic filename="DejaVuSerif-BoldItalic.otf"/>
    </font>
    <font name="DEJAVU COND S">
      <normal      filename="DejaVuSerifCondensed-Regular.otf"/>
      <bold        filename="DejaVuSerifCondensed-Bold.otf"/>
      <italic      filename="DejaVuSerifCondensed-Italic.otf"/>
      <bold-italic filename="DejaVuSerifCondensed-BoldItalic.otf"/>
    </font>
    <font name="DEJAVU">
      <normal      filename="DejaVuSans-Regular.otf"/>
      <bold        filename="DejaVuSans-Bold.otf"/>
      <italic      filename="DejaVuSans-Italic.otf"/>
      <bold-italic filename="DejaVuSans-BoldItalic.otf"/>
    </font>
    <font name="DEJAVU COND">
      <normal      filename="DejaVuSansCondensed-Regular.otf"/>
      <bold        filename="DejaVuSansCondensed-Bold.otf"/>
      <italic      filename="DejaVuSansCondensed-Italic.otf"/>
      <bold-italic filename="DejaVuSansCondensed-BoldItalic.otf"/>
    </font>
    <font name="EURO COMP S">
      <normal      filename="EC-Regular_166.ibmf"/>
      <bold        filename="EC-Bold_166.ibmf"/>
      <italic      filename="EC-Italic_166.ibmf"/>
      <bold-italic filename="EC-BoldItalic_166.ibmf"/>
    </font>
    <font name="EURO COMP">
      <normal      filename="ECSans-Regular_166.ibmf"/>
      <bold        filename="ECSans-Bold_166.ibmf"/>
      <italic      filename="ECSans-Italic_166.ibmf"/>
      <bold-italic filename="ECSans-BoldItalic_166.ibmf"/>
    </font>
    <font name="EURO COMP TYPEWRITER">
      <normal      filename="ECTypewriter-Regular_166.ibmf"/>
      <bold        filename="ECTypewriter-Regular_166.ibmf"/>
      <italic      filename="ECTypewriter-Italic_166.ibmf"/>
      <bold-italic filename="ECTypewriter-Italic_166.ibmf"/>
    </font>
  </group>
</fonts>
